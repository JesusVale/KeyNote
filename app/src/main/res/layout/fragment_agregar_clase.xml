<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AgregarClaseFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:src="@drawable/material_symbols_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="Agregar clase"
                android:textColor="@color/grayDark"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/tituloTxt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="11dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_textfield"
                android:ems="10"
                android:hint="TÃ­tulo"
                android:inputType="text"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="22dp"
                android:paddingVertical="7dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                >

                <LinearLayout
                    android:id="@+id/dias"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/lunes"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="L"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/rounded_white_textfield"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <CheckBox
                        android:id="@+id/martes"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="M"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/rounded_white_textfield"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <CheckBox
                        android:id="@+id/miercoles"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="Mi"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/rounded_white_textfield"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <CheckBox
                        android:id="@+id/jueves"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="J"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/rounded_white_textfield"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <CheckBox
                        android:id="@+id/viernes"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:text="V"
                        android:layout_marginHorizontal="1dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/rounded_white_textfield"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:text="Hora"/>

                <!--<TimePicker
                    android:id="@+id/fechaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="135dp"
                    android:timePickerMode="spinner" />-->

                <TextView
                    android:id="@+id/fechaTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_white_textfield"
                    android:ems="12"
                    android:hint="0:00"
                    android:textAlignment="center"
                    android:layout_marginLeft="130dp"
                    android:textSize="18sp"
                    android:inputType="date"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="7dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                >
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:text="Color" />
                <RadioGroup
                    android:id="@+id/colores"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rRadio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/red_note_background"
                        app:backgroundTint="@color/recordRed"
                        android:textSize="20dp"
                        android:tag="r"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/bRadio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/blue_note_background"
                        app:backgroundTint="@color/blue"
                        android:textSize="20dp"
                        android:tag="b"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/gRadio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/green_note_background"
                        app:backgroundTint="@color/green"
                        android:tag="g"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/pRadio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="3dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/red_note_background"
                        app:backgroundTint="@color/purple_200"
                        android:textSize="20dp"
                        android:tag="p"
                        android:textStyle="bold"/>
                    <RadioButton
                        android:id="@+id/yRadio"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginHorizontal="1dp"
                        android:textAlignment="center"
                        android:button="@android:color/transparent"
                        android:background="@drawable/red_note_background"
                        app:backgroundTint="@color/yellowButton"
                        android:textSize="20dp"
                        android:tag="y"
                        android:textStyle="bold"/>

                </RadioGroup>
            </LinearLayout>


            <EditText
                android:id="@+id/infoTxt"
                android:layout_width="300dp"
                android:layout_height="219dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_white_textfield"
                android:ems="10"
                android:hint="Info."
                android:inputType="text"
                android:paddingHorizontal="22dp"
                android:paddingVertical="7dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>