<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notas"
    android:background="@drawable/textura_nota">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:text= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras auctor libero sed leo sagittis, vel commodo ante tempor. Phasellus ultricies finibus tortor in molestie. Suspendisse sagittis arcu hendrerit, faucibus magna id, mollis tortor."/>
        <FrameLayout
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button_play"
            >
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/baseline_play_circle_outline_24"
                android:scaleType="fitCenter"
                />
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:src="@drawable/voice_line"
                android:scaleType="fitCenter"
                />
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:layout_gravity="center"
                android:src="@drawable/voice_line"
                android:scaleType="fitCenter"

                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:text= "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras auctor libero sed leo sagittis, vel commodo ante tempor. Phasellus ultricies finibus tortor in molestie. Suspendisse sagittis arcu hendrerit, faucibus magna id, mollis tortor."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="20dp"
            >
            <FrameLayout
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button_play"
                android:backgroundTint="@color/white"
                >
                <ImageButton
                    android:id="@+id/btn_voice"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/voice_line"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    />
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/attachment_plus"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    />
                <ImageButton
                    android:id="@+id/btn_photo"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/baseline_photo_camera_24"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>




</FrameLayout>